{
  "manifest_version": 2,
  "name": "Alerte sur les sites GenAI, par Next.ink",
  "version": "2.0.6",
  "description": "Affiche une alerte sur des sites g\u00e9n\u00e9r\u00e9s tout ou partie par des IA. Liste g\u00e9r\u00e9e par Next.ink",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "https://dl.red.flag.domains/*",
    "https://next.ink/*",
    "http://gavois.fr/*",
    "https://www.astrohamster.com/*",
    "alarms",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "browser_style": true,
    "default_icon": {
      "16": "icone-app_ia16.png",
      "32": "icone-app_ia32.png",
      "48": "icone-app_ia48.png",
      "64": "icone-app_ia64.png",
      "128": "icone-app_ia128.png"
    }
  },
  "options_ui": {
    "page": "admin.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    "bloom-filter.json",
    "test.txt",
    "test2.txt",
    "admin.html",
    "alert.html",
    "alert.js"
  ],
  "icons": {
    "16": "icone-app_ia16.png",
    "32": "icone-app_ia32.png",
    "48": "icone-app_ia48.png",
    "64": "icone-app_ia64.png",
    "128": "icone-app_ia128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "sebastien@gavois.fr",
      "strict_min_version": "58.0"
    }
  }
}